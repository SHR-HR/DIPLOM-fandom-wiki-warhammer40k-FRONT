{
  "files.eol": "\n",  // Использовать LF (Line Feed) для окончаний строк - стандарт для Unix/Linux и современных проектов
  "files.insertFinalNewline": true,  // Автоматически добавлять пустую строку в конце файла - требование многих линтеров
  "files.trimTrailingWhitespace": true,  // Удалять пробелы в конце строк при сохранении - для чистоты кода
  "editor.formatOnSave": true,  // Автоматически форматировать код при сохранении - обеспечивает единый стиль
  "tailwindCSS.lint.unknownAtRules": "ignore"  // Игнорировать неизвестные директивы Tailwind - полезно при использовании кастомных плагинов
}



