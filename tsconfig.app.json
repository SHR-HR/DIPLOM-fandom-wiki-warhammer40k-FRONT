{
  "compilerOptions": {
    // Целевая версия ECMAScript для компиляции
    "target": "ES2020",
    
    // Использование современного синтаксиса для полей класса
    "useDefineForClassFields": true,
    
    // Подключаемые библиотеки TypeScript
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    
    // Система модулей
    "module": "ESNext",
    
    // Пропуск проверки типов в файлах деклараций
    "skipLibCheck": true,

    // Стратегия разрешения модулей
    "moduleResolution": "bundler",
    
    // Разрешение импортов с TypeScript расширениями
    "allowImportingTsExtensions": true,
    
    // Гарантирует, что каждый файл может быть скомпилирован изолированно
    "isolatedModules": true,
    
    // Принудительное определение файлов как модулей
    "moduleDetection": "force",
    
    // Не генерировать файлы на выходе (Vite сам занимается сборкой)
    "noEmit": true,
    
    // Настройка JSX для React 17+ (автоматический импорт jsx)
    "jsx": "react-jsx",

    // Строгие проверки TypeScript
    "strict": true,
    
    // Ошибка на неиспользуемые локальные переменные
    "noUnusedLocals": true,
    
    // Ошибка на неиспользуемые параметры
    "noUnusedParameters": true,
    
    // Ошибка на пропущенные break в switch
    "noFallthroughCasesInSwitch": true,

    // Типы для Vite (переменные окружения, импорты и т.д.)
    "types": ["vite/client"]
  },
  
  // Включаемые файлы для компиляции
  "include": ["src"]
}





